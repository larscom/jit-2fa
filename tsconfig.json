{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true, // set back to false when merged: https://github.com/tabler/tabler-icons/pull/178
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "$accounts/*": ["src/accounts/*"],
      "$core/*": ["src/core/*"],
      "$export/*": ["src/export/*"],
      "$help/*": ["src/help/*"],
      "$import/*": ["src/import/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
